{
  "defaultSeverity": "warning",
  "extends": [
    "tslint:recommended"
  ],
  "linterOptions": {
    "exclude": [
      "node_modules/**"
    ]
  },
  "rules": {
    "indent": [
      true,
      "spaces",
      4
    ],
    "interface-name": false,
    "no-consecutive-blank-lines": false,
    "object-literal-sort-keys": false,
    "ordered-imports": false,
    "quotemark": [
      true,
      "double"
    ],
    "no-console": false,
    "no-var-requires": false,
    "variable-name": {
      "options": [
        "allow-snake-case",
        "allow-pascal-case"
      ]
    }
  }
}
